package com.wgc.green.manager;

import java.util.*;

import org.springframework.beans.factory.annotation.Autowired;

import com.wgc.green.entity.SensorData;
import com.wgc.green.repository.SensorDataRepository;

public class SensorDataManager {
	@Autowired
	private static SensorDataRepository sensorDataRepository;
	
	public static List<SensorData> getSensorData(String id, Date startTime, Date endTime) {
		List<SensorData> sensorDataList = new LinkedList<>();
		if(sensorIDList == null) { return sensorDataList;}

		for(Long l : sensorIDList) {
			sensorDataList.add( sensorDataRepository.findAllById(l));
		}
		return sensorDataList;
	}

	public static void addSensorData(List<SensorData> sensorDataList) {
		sensorDataRepository.insert(sensorDataList);  
	}

	public static void updateSensorData(SensorData sensorData) {
		sensorDataRepository.save(sensorData);   // save = upsert;  insert
		
	}

	public static void deleteSensorData(String id) {
		sensorDataRepository.deleteById(id);
	}



}
